{
    "name": "talesoft/tale-pug",
    "type": "library",
    "keywords": [
        "template", "template-engine", "dialect", "html", "views", "render",
        "presentation", "pug", "jade", "html", "php", "phtml"
    ],
    "description": "A clean, lightweight and easy-to-use templating engine for PHP based on Pug, formerly Jade",
    "license": "MIT",
    "homepage": "http://jade.talesoft.codes",
    "authors": [
        {
            "name": "Torben Koehn",
            "email": "torben@talesoft.codes"
        }
    ],
    "support": {
        "email": "torben@talesoft.codes",
        "issues": "https://github.com/talesoft/tale-pug/issues",
        "source": "https://github.com/talesoft/tale-pug",
        "docs": "http://jade.talesoft.codes/docs"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.5.0",
        "talesoft/tale-config": "0.2",
        "symfony/polyfill-mbstring": "^1.3.0"
    },
    "autoload": {
        "psr-4": {
            "Tale\\Pug\\": ""
        },
        "files": [
            "functions.php",
            "Compiler/functions.php"
        ]
    },
    "bin": ["tale-pug"],
    "suggest": {
        "erusev/parsedown": "Enables Markdown filtering",
        "coffeescript/coffeescript": "Enables CoffeeScript filtering",
        "leafo/lessphp": "Enables LESS filtering",
        "neemzy/stylus": "Enables Stylus filtering",
        "leafo/scssphp": "Enables SASS filtering"
    }
}
